@model TechJobs6Persistent.ViewModels.AddJobViewModel

@{
    ViewData["Title"] = "Add Job";
}

<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="EmployerId"></label>
        <select asp-for="EmployerId" class="form-control" asp-items="Model.Employers">
            <option value="">-- Select Employer --</option>
        </select>
        <span asp-validation-for="EmployerId" class="text-danger"></span>
    </div>
    <br />

    <input type="submit" value="Add Job" class="btn btn-primary" />
</form>
